seek() {
  sudo find / -name $@ -not -path '/.snapshots/*'
}

mkcd() {
  mkdir -p "$@" && eval cd "\"\$$#\""
}

nonohup() {
  nohup $@ >/dev/null 2>&1 &
}

start_pma() {
  # Start PhpMyAdmin - start nessesary services and open phpMyAdmin in firefox.
  systemctl start mysql
  systemctl start apache2
  firefox 'http://localhost/phpMyAdmin/'
}

gen_bitbucket_key() {
  echo "BOOOM! motherfucking bitbucket key generator!"
  ssh-keygen
  echo "\nBOOM! SSH key generated!\n"
  eval `ssh-agent -s`
  ssh-add ~/.ssh/id_rsa
  echo "\nBOOM! SSH key added to current session!\n"
  echo "Here u r:"
  cat ~/.ssh/id_rsa.pub
}

find_string() {
  grep -rnw . -e $1
}

pip3_update_all() {
  sudo pip3 freeze --local | grep -v '^\-e' | cut -d = -f 1  | xargs -n1 sudo pip3 install -U
}

tomobi() {
  ebook-convert $1 .mobi
}

andro() {
  jmtpfs /media/mtp/
  cd /media/mtp/
}

uandro() {
  cd ~
  umount /media/mtp/
}

kindle() {
  mount /dev/sdb1 /mnt
  cd /mnt/documents/
}

ukindle() {
  cd ~
  umount /mnt
}

weather() {
  curl "http://wttr.in/$1"
}

factorio() {
  cd ~/Games/factorio/bin/x64/
  ./factorio
}

zypper_ans() {
  echo 'y'  # proceed to update
  echo 'yes'  # agree on nouveau driver license
  while true; do
    echo 'y'
  done;
}

